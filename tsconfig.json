{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "src",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}